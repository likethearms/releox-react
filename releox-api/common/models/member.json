{
  "name": "Member",
  "base": "User",
  "strict": false,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "InviteUser": true,
    "RegisterUser": true,
    "CompanyContext": {
      "ignore": [
        "register",
        "confirm",
        "login",
        "logout",
        "resetPassword",
        "invitation",
        "acceptInvitation",
        "validateInvitationToken",
        "sendInvitationRequest"
      ]
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string"
    },
    "companyId": {
      "type": "string",
      "required": true
    },
    "isCompanyOwner": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "language": {
      "type": "string",
      "required": true,
      "default": "en"
    },
    "deprecated_complete": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "company": {
      "type": "belongsTo",
      "model": "Company",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "register"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "teamMember",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "validateInvitationToken"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "acceptInvitation"
    }
  ],
  "methods": {}
}
